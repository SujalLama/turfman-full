{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "total": {
      "type": "float",
      "required": false
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": false
    },
    "phone": {
      "type": "string",
      "required": false
    },
    "deliveryAddress": {
      "type": "json",
      "required": false
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "afterPay",
        "zipPay",
        "stripe",
        "bankTransfer"
      ],
      "required": false
    },
    "isPaid": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "deliveryNotes": {
      "type": "text"
    },
    "deliveryDate": {
      "type": "date"
    },
    "products": {
      "type": "json",
      "required": true
    },
    "shippingCost": {
      "type": "float"
    }
  }
}

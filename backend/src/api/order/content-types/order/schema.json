{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "total": {
      "type": "float",
      "required": false
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": false
    },
    "phone": {
      "type": "string",
      "required": false
    },
    "deliveryAddress": {
      "type": "json",
      "required": false
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "afterPay",
        "zipPay",
        "stripe",
        "bankTransfer"
      ],
      "required": false
    },
    "deliveryNotes": {
      "type": "text"
    },
    "deliveryDate": {
      "type": "date"
    },
    "products": {
      "type": "json",
      "required": true
    },
    "shippingCost": {
      "type": "float"
    },
    "tax": {
      "type": "float"
    },
    "subTotal": {
      "type": "float"
    },
    "deliveryStatus": {
      "type": "enumeration",
      "enum": [
        "noRequired",
        "uninitiated",
        "initiated",
        "processing",
        "delivered"
      ],
      "default": "uninitiated"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "cancelled",
        "unpaid",
        "processing",
        "paid"
      ],
      "default": "unpaid"
    },
    "pickupDate": {
      "type": "date"
    },
    "token": {
      "type": "string"
    },
    "discount": {
      "type": "float",
      "max": 100,
      "default": 0
    },
    "paymentSlip": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
